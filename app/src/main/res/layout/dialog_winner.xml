<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <ImageView
        android:id="@+id/iv_binar"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="80dp"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textHomePlayerComp" />

    <Button
        android:id="@+id/btn_load"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Load Gambar"
        android:layout_marginRight="80dp"
        android:layout_marginLeft="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_binar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_binar"
        app:layout_constraintTop_toTopOf="@+id/iv_binar" />

    <TextView
        android:id="@+id/choose_enemy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pilih Lawanmu"
        android:textSize="28dp"
        android:textStyle="bold"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageViewHomePlayerPlayer"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:src="@drawable/ic_landing_page1"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="@+id/choose_enemy"
        app:layout_constraintStart_toStartOf="@+id/choose_enemy"
        app:layout_constraintTop_toBottomOf="@+id/choose_enemy" />

    <TextView
        android:id="@+id/textHomePlayerPlayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player VS Player"
        android:textSize="20dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/imageViewHomePlayerPlayer"
        app:layout_constraintStart_toStartOf="@+id/imageViewHomePlayerPlayer"
        app:layout_constraintTop_toBottomOf="@+id/imageViewHomePlayerPlayer" />

    <ImageView
        android:id="@+id/imageViewHomePlayerComp"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/ic_landing_page2"
        app:layout_constraintEnd_toEndOf="@+id/textHomePlayerPlayer"
        app:layout_constraintStart_toStartOf="@+id/textHomePlayerPlayer"
        app:layout_constraintTop_toBottomOf="@+id/textHomePlayerPlayer" />

    <TextView
        android:id="@+id/textHomePlayerComp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player VS Computer"
        android:textSize="20dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/imageViewHomePlayerComp"
        app:layout_constraintStart_toStartOf="@+id/imageViewHomePlayerComp"
        app:layout_constraintTop_toBottomOf="@+id/imageViewHomePlayerComp" />


</androidx.constraintlayout.widget.ConstraintLayout>